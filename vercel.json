{
  "version": 2,
  "builds": [
    {
      "src": "backend_ai/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend_ai/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend_ai/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend_ai/$1",
      "check": true
    },
    {
      "src": "/(.*)",
      "status": 200,
      "dest": "/frontend_ai/index.html"
    }
  ]
}